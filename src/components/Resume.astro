---
// src/components/Resume.astro
const { experiences = [], education = [] } = Astro.props;
---

<section class="min-h-screen bg-white py-28 px-4 sm:px-8 relative">
  <!-- Background decoration -->
  <div class="absolute inset-0 bg-[radial-gradient(circle_at_20%_30%,rgba(102,126,234,0.05)_0%,transparent_50%),radial-gradient(circle_at_80%_70%,rgba(240,147,251,0.05)_0%,transparent_50%)] pointer-events-none"></div>
  
  <div class="max-w-7xl mx-auto relative z-10">
    <h2 class="text-4xl sm:text-5xl lg:text-6xl font-black text-center text-gray-800 mb-20 relative inline-block left-1/2 -translate-x-1/2">
      Deneyim & EÄŸitim
      <div class="absolute -bottom-3 left-1/2 -translate-x-1/2 w-36 h-1.5 bg-gradient-to-r from-purple-500 to-purple-700 rounded-full"></div>
    </h2>
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16">
      <!-- Experience Column -->
      <div>
        <h3 class="text-3xl font-extrabold text-gray-800 mb-10 flex items-center gap-4">
          <span class="text-4xl grayscale brightness-75">ðŸ’¼</span>
          Profesyonel Deneyim
        </h3>
        
        <div class="relative pl-10 before:content-[''] before:absolute before:left-0 before:top-0 before:bottom-0 before:w-0.5 before:bg-gradient-to-b before:from-purple-500 before:via-purple-700 before:to-pink-400">
          {experiences.map((exp, index) => (
            <div class="relative mb-10 opacity-0 animate-fade-in-up" style={`animation-delay: ${index * 0.2}s; animation-fill-mode: forwards;`}>
              <!-- Timeline marker -->
              <div class="absolute -left-[46px] top-2 w-4 h-4 rounded-full bg-gradient-to-br from-purple-500 to-purple-700 shadow-[0_0_0_4px_white,0_0_0_8px_rgba(102,126,234,0.2)] transition-all duration-300 hover:scale-125 hover:shadow-[0_0_0_4px_white,0_0_0_12px_rgba(102,126,234,0.3)]"></div>
              
              <div class="bg-gray-50 p-6 rounded-2xl border-l-4 border-transparent transition-all duration-300 hover:bg-white hover:shadow-[0_10px_40px_rgba(0,0,0,0.1)] hover:border-purple-500 hover:translate-x-1">
                <span class="inline-block text-xs font-bold text-purple-600 bg-purple-100 px-4 py-1 rounded-full mb-3 uppercase tracking-wide">
                  {exp.date}
                </span>
                <h4 class="text-xl font-bold text-gray-800 mb-1">{exp.title}</h4>
                {exp.company && <p class="text-base font-semibold text-gray-500 mb-3">{exp.company}</p>}
                <p class="text-sm leading-relaxed text-gray-600">{exp.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
      
      <!-- Education Column -->
      <div>
        <h3 class="text-3xl font-extrabold text-gray-800 mb-10 flex items-center gap-4">
          <span class="text-4xl grayscale brightness-75">ðŸŽ“</span>
          EÄŸitim
        </h3>
        
        <div class="relative pl-10 before:content-[''] before:absolute before:left-0 before:top-0 before:bottom-0 before:w-0.5 before:bg-gradient-to-b before:from-purple-500 before:via-purple-700 before:to-pink-400">
          {education.map((edu, index) => (
            <div class="relative mb-10 opacity-0 animate-fade-in-up" style={`animation-delay: ${index * 0.2}s; animation-fill-mode: forwards;`}>
              <!-- Timeline marker -->
              <div class="absolute -left-[46px] top-2 w-4 h-4 rounded-full bg-gradient-to-br from-purple-500 to-purple-700 shadow-[0_0_0_4px_white,0_0_0_8px_rgba(102,126,234,0.2)] transition-all duration-300 hover:scale-125 hover:shadow-[0_0_0_4px_white,0_0_0_12px_rgba(102,126,234,0.3)]"></div>
              
              <div class="bg-gray-50 p-6 rounded-2xl border-l-4 border-transparent transition-all duration-300 hover:bg-white hover:shadow-[0_10px_40px_rgba(0,0,0,0.1)] hover:border-purple-500 hover:translate-x-1">
                <span class="inline-block text-xs font-bold text-purple-600 bg-purple-100 px-4 py-1 rounded-full mb-3 uppercase tracking-wide">
                  {edu.date}
                </span>
                <h4 class="text-xl font-bold text-gray-800 mb-1">{edu.degree}</h4>
                <p class="text-base font-semibold text-gray-500 mb-3">{edu.institution}</p>
                {edu.description && <p class="text-sm leading-relaxed text-gray-600">{edu.description}</p>}
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .animate-fade-in-up {
    animation: fadeInUp 0.6s ease;
  }
</style>