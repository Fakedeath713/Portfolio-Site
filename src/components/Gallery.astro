---
// src/components/Gallery.astro
// Expects an array of items, each with an image, title, and optionally a video URL if you add video support later.
const { items = [] } = Astro.props;
---

<section class="min-h-screen bg-white/25 backdrop-blur-[2px] py-28 px-4 sm:px-8">
  <div class="max-w-[1600px] mx-auto">
    <h2 class="font-title text-4xl sm:text-5xl lg:text-6xl font-black text-center text-gray-800 mb-16 relative inline-block left-1/2 -translate-x-1/2">
      Fashion Show Images
      <div class="absolute -bottom-3 left-1/2 -translate-x-1/2 w-36 h-1.5 bg-gradient-to-r from-black to-gray rounded-full"></div>
    </h2>
    
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
      {items.map((item, index) => (
        <div 
          class="gallery-item opacity-0 scale-90"
          data-image={item.image}
          data-title={item.title}
          style={`animation-delay: ${(index % 12) * 0.05}s;`}
        >
          <div class="group relative rounded-3xl overflow-hidden bg-white shadow-[0_10px_30px_rgba(0,0,0,0.1)] transition-all duration-400 hover:-translate-y-2 hover:shadow-[0_20px_50px_rgba(0,0,0,0.2)] cursor-pointer">
            <div class="relative w-full pb-[120%] overflow-hidden">
              <img 
                src={item.image} 
                alt={item.title} 
                loading="lazy"
                class="absolute inset-0 w-full h-full object-cover transition-transform duration-400 group-hover:scale-110"
              />
              
              <div class="absolute inset-0 bg-gradient-to-t from-white/95 via-transparent to-transparent flex items-end p-8 opacity-0 transition-opacity duration-400 group-hover:opacity-100">
                <div class="transform translate-y-5 transition-transform duration-400 group-hover:translate-y-0">
                  <h3 class="text-2xl font-bold text-gray-800">{item.title}</h3>
                </div>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>


<script>
  document.addEventListener('DOMContentLoaded', () => {
    const galleryItems = document.querySelectorAll('.gallery-item');

    // Initialize all items as visible
    galleryItems.forEach(item => {
      item.classList.add('show');
    });
    
    // Open lightbox on gallery item click
    galleryItems.forEach((item, index) => {
      item.addEventListener('click', () => {
        // Prepare items array for lightbox
        const itemsForLightbox = Array.from(galleryItems).map(el => ({
          image: el.getAttribute('data-image'),
          title: el.getAttribute('data-title')
        }));
        
        // Dispatch custom event to open global lightbox
        document.dispatchEvent(new CustomEvent('openLightbox', {
          detail: {
            items: itemsForLightbox,
            index: index
          }
        }));
      });
    });
  });
</script>

<style>
  /* Removed .filter-btn.active style */
  
  .gallery-item.show {
    animation: fadeInScale 0.6s ease forwards;
  }
  
  @keyframes fadeInScale {
    from {
      opacity: 0;
      transform: scale(0.8) translateY(30px);
    }
    to {
      opacity: 1;
      transform: scale(1) translateY(0);
    }
  }
</style>