---
// src/components/VideoGallery.astro
const { videos = [] } = Astro.props;
---

<section class="min-h-screen bg-white py-28 px-4 sm:px-8 relative">
  <!-- Background decoration -->
  <div class="absolute inset-0 bg-[radial-gradient(circle_at_30%_20%,rgba(240,147,251,0.05)_0%,transparent_50%),radial-gradient(circle_at_70%_80%,rgba(102,126,234,0.05)_0%,transparent_50%)] pointer-events-none"></div>
  
  <div class="max-w-[1600px] mx-auto relative z-10">
    <h2 class="text-4xl sm:text-5xl lg:text-6xl font-black text-center text-gray-800 mb-20 relative inline-block left-1/2 -translate-x-1/2">
      Video Galerisi
      <div class="absolute -bottom-3 left-1/2 -translate-x-1/2 w-36 h-1.5 bg-gradient-to-r from-purple-500 to-purple-700 rounded-full"></div>
    </h2>
    
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 items-start">
      {videos.map((video, index) => (
        <div 
          class={`opacity-0 animate-fade-in-up ${video.orientation === 'vertical' ? 'sm:row-span-2' : ''}`}
          style={`animation-delay: ${(index % 8) * 0.1}s; animation-fill-mode: forwards;`}
        >
          <div class="group relative rounded-3xl overflow-hidden bg-gray-50 shadow-[0_15px_40px_rgba(0,0,0,0.1)] transition-all duration-400 hover:-translate-y-1 hover:shadow-[0_25px_60px_rgba(0,0,0,0.15)]">
            <!-- Top accent -->
            <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-purple-500 via-purple-700 to-pink-400 z-10"></div>
            
            <video 
              controls 
              preload="metadata"
              poster={video.poster || ''}
              class="w-full h-auto block bg-black"
            >
              <source src={video.src} type="video/mp4" />
              Tarayıcınız video etiketini desteklemiyor.
            </video>
            
            {video.title && (
              <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/80 to-transparent p-6 pt-8 transform translate-y-full transition-transform duration-300 group-hover:translate-y-0">
                <h3 class="text-white text-xl font-semibold">{video.title}</h3>
              </div>
            )}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(50px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .animate-fade-in-up {
    animation: fadeInUp 0.8s ease;
  }
</style>