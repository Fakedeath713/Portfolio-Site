---
// src/components/Hero.astro
import React from "react";
const { name, title, instagram, linkedin } = Astro.props;
import { SiInstagram, SiLinkedin } from "react-icons/si";
---

<section class="relative aspect-[16/9] w-full max-h-[850px] flex items-center justify-center overflow-hidden">

  <!-- Background Image -->
  <div 
    class="absolute inset-0 bg-cover bg-center bg-no-repeat"
    style={`background-image: url('/images/self/hero-bg-updated.png');`}
  ></div>

  <!-- Overlay -->
  <div class="absolute inset-0 bg-[radial-gradient(circle_at_30%_50%,rgba(255,255,255,0.1)_0%,transparent_50%),radial-gradient(circle_at_70%_50%,rgba(0,0,0,0.35)_0%,transparent_50%)]"></div>

  <!-- Content -->
  <div class="relative z-10 text-center text-white px-8">
    <h1 class="text-5xl sm:text-7xl lg:text-8xl font-black tracking-tight uppercase mb-6 bg-gradient-to-r from-white via-gray-100 to-white bg-clip-text text-transparent animate-text-glow">
      {name}
    </h1>
    <p class="text-xl sm:text-2xl lg:text-3xl font-light tracking-widest uppercase opacity-95">
      {title}
    </p>

    <!-- Social Links -->
    <div class="flex gap-8 justify-center mt-12">
      {instagram && (
        <a href={instagram} target="_blank" rel="noopener noreferrer">
          <SiInstagram client:load class="w-6 h-6 hover:text-pink-500 transition-colors" />
        </a>
      )}
      {linkedin && (
        <a href={linkedin} target="_blank" rel="noopener noreferrer">
          <SiLinkedin client:load class="w-6 h-6 hover:text-blue-700 transition-colors" />
        </a>
      )}
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-10 left-1/2 -translate-x-1/2 z-20">
    <div class="w-8 h-12 border-3 border-white rounded-full relative">
      <div class="absolute top-2 left-1/2 -translate-x-1/2 w-1.5 h-1.5 bg-white rounded-full animate-scroll-bounce"></div>
    </div>
  </div>
</section>

<style>
  @keyframes gradient {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }
  
  .animate-gradient {
    background-size: 400% 400%;
    animation: gradient 15s ease infinite;
  }
  
  @keyframes textGlow {
    0%, 100% { text-shadow: 0 0 80px rgba(255,255,255,0.5); }
    50% { text-shadow: 0 0 120px rgba(255,255,255,0.8); }
  }
  
  .animate-text-glow {
    animation: textGlow 3s ease-in-out infinite;
  }
  
  @keyframes scrollBounce {
    0%, 100% { top: 0.5rem; opacity: 1; }
    50% { top: 1.5rem; opacity: 0.5; }
  }
  
  .animate-scroll-bounce {
    animation: scrollBounce 2s infinite;
  }
</style>