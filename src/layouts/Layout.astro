---
// src/layouts/Layout.astro
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="tr" class="scroll-smooth">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title}</title>
  <meta name="description" content="Elif Dikmen - Tasarımın Yenilikçi Mimarı" />
  
  <!-- Import global.css -->
  <link rel="stylesheet" href="/src/styles/global.css">
</head>
<body class="font-merriweather antialiased text-gray-800 bg-white overflow-x-hidden">
  <slot />
</body>
</html>

<style is:global>
  /* Custom scrollbar */
  ::-webkit-scrollbar {
    width: 10px;
  }
  
  ::-webkit-scrollbar-track {
    @apply bg-gray-100;
  }
  
  ::-webkit-scrollbar-thumb {
    @apply bg-gradient-to-b from-purple-500 to-purple-700 rounded;
  }
  
  ::-webkit-scrollbar-thumb:hover {
    @apply bg-gradient-to-b from-purple-700 to-purple-500;
  }
  
  /* Selection */
  ::selection {
    @apply bg-purple-600 text-white;
  }
  
  ::-moz-selection {
    @apply bg-purple-600 text-white;
  }
</style>